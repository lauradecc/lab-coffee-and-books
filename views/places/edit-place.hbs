<h1>Edit {{updatedPlace.name}}</h1>
<hr>

<div class="row justify-content-center">

    <div class="col-md-6">

        <form action="/places/{{updatedPlace.id}}/edit" method="POST">

            <div class="form-group">
                <label for="name">Name</label>
                <input name="name" id="name" type="text" class="form-control" value="{{updatedPlace.name}}">
            </div>
            <br>


            {{#if isBookstore}}
            
            <div class="form-group">
                <label>Select Type</label>
                <br>
                <select name="type" class="form-control">
                    <option value="coffee shop">Coffee Shop</option>
                    <option value="bookstore" selected>Bookstore</option>
                </select>
            </div>
            <br>

            {{else}}

            <div class="form-group">
                <label>Select Type</label>
                <br>
                <select name="type" class="form-control">
                    <option value="coffee shop" selected>Coffee Shop</option>
                    <option value="bookstore">Bookstore</option>
                </select>
            </div>
            <br>

            {{/if}}

            <div class="form-group">
                <label for="lat">Latitude</label>
                <input name="lat" id="lat" type="text" class="form-control" value="{{updatedPlace.location.coordinates.[0]}}">
            </div>
            <br>

            <div class="form-group">
                <label for="lng">Longitude</label>
                <input name="lng" id="lng" type="text" class="form-control"  value="{{updatedPlace.location.coordinates.[1]}}">
            </div>
            <br>

            <input type="submit" class="btn btn-dark btn-block" value="Edit '{{updatedPlace.name}}'">
            <br>
            <br>

        </form>

    </div>
</div>